{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react-jsx",
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": [
      "jest",
      "node",
      "../../node_modules/@testing-library/jest-dom"
    ],
    "lib": [
      "esnext",
      "dom",
      "ES2015.Iterable"
    ],
    "typeRoots": [
      "../../node_modules/@types",
      "node_modules/@types"
    ]
  },
  "exclude":  [
    "./node_modules/**/*"
  ],
  "include": [
    "./src/**/*"
  ]
}
